#include <stdio.h>

int main()
{
    // Declaração das variáveis para a 1ª carta
    char estado1;
    char codigo1[4];
    char cidade1[50];
    int populacao1;
    float area1;
    float pib1;
    int pontos_turisticos1;

    // Declaração das variáveis para a 2ª carta
    char estado2;
    char codigo2[4];
    char cidade2[50];
    int populacao2;
    float area2;
    float pib2;
    int pontos_turisticos2;

    // Leitura da 1ª carta
    printf("Informe o estado da 1ª carta (A-H): ");
    scanf(" %c", &estado1);
    printf("Informe o código da 1ª carta (ex.: A01): ");
    scanf("%3s", codigo1);
    printf("Informe o nome da cidade da 1ª carta: ");
    scanf(" %[^\n]", cidade1);
    printf("Informe a populacao da 1ª cidade: ");
    scanf("%d", &populacao1);
    printf("Informe a area da 1ª cidade (em km²): ");
    scanf("%f", &area1);
    printf("Informe o PIB da 1ª cidade (em bilhões de reais): ");
    scanf("%f", &pib1);
    printf("Informe o numero de pontos turisticos da 1ª cidade: ");
    scanf("%d", &pontos_turisticos1);

    // Leitura da 2ª carta
    printf("Informe o estado da 2ª carta (A-H): ");
    scanf(" %c", &estado2);
    printf("Informe o código da 2ª carta (ex.: B02): ");
    scanf("%3s", codigo2);
    printf("Informe o nome da cidade da 2ª carta: ");
    scanf(" %[^\n]", cidade2);
    printf("Informe a populacao da 2ª cidade: ");
    scanf("%d", &populacao2);
    printf("Informe a area da 2ª cidade (em km²): ");
    scanf("%f", &area2);
    printf("Informe o PIB da 2ª cidade (em bilhões de reais): ");
    scanf("%f", &pib2);
    printf("Informe o numero de pontos turisticos da 2ª cidade: ");
    scanf("%d", &pontos_turisticos2);

    // Exibe as cartas
    printf("\nCarta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", cidade1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Quantidade de Pontos Turisticos: %d\n", pontos_turisticos1);

    printf("\nCarta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", cidade2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Quantidade de Pontos Turisticos: %d\n", pontos_turisticos2);

    return 0;
}
